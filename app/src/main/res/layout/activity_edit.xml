        app:layout_constraintBottom_toBottomOf="@+id/pctRaster"
        app:layout_constraintEnd_toEndOf="@+id/pctRaster"
        app:layout_constraintStart_toStartOf="@+id/pctRaster"
        app:layout_constraintTop_toTopOf="@+id/pctRaster"
        app:layout_constraintVertical_bias="0.481"
        app:srcCompat="@drawable/marker_blue_8" />

    <EditText
        android:id="@+id/edtTxt5X"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:gravity="right"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/txtPos5"
        app:layout_constraintTop_toTopOf="@+id/edtTxt1Y"
        android:inputType="number|numberDecimal|numberSigned"/>

    <EditText
        android:id="@+id/edtTxt1Y"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:gravity="right"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/edtTxt1X"
        app:layout_constraintTop_toTopOf="@+id/edtTxt1X"
        android:inputType="number|numberDecimal|numberSigned"/>

    <EditText
        android:id="@+id/edtTxt1X"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:gravity="right"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtPos1"
        app:layout_constraintStart_toEndOf="@+id/txtPos1"
        app:layout_constraintTop_toTopOf="@+id/txtPos1"
        android:inputType="number|numberDecimal|numberSigned"/>

    <EditText
        android:id="@+id/edtTxt2X"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/edtTxt3X"
        app:layout_constraintStart_toStartOf="@+id/edtTxt1X"
        app:layout_constraintTop_toBottomOf="@+id/edtTxt1X"
        android:inputType="number|numberDecimal|numberSigned"/>

    <EditText
        android:id="@+id/edtTxt2Y"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/edtTxt1Y"
        app:layout_constraintTop_toTopOf="@+id/edtTxt2X"
        android:inputType="number|numberDecimal|numberSigned"/>

    <EditText
        android:id="@+id/edtTxt3X"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/edtTxt4X"
        app:layout_constraintStart_toStartOf="@+id/edtTxt1X"
        app:layout_constraintTop_toBottomOf="@+id/edtTxt2X"
        android:inputType="number|numberDecimal|numberSigned"/>

    <EditText
        android:id="@+id/edtTxt3Y"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/edtTxt2Y"
        app:layout_constraintTop_toTopOf="@+id/edtTxt3X"
        android:inputType="number|numberDecimal|numberSigned"/>

    <EditText
        android:id="@+id/edtTxt4X"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/edtTxt1X"
        app:layout_constraintTop_toBottomOf="@+id/edtTxt3X"
        android:inputType="number|numberDecimal|numberSigned"/>

    <EditText
        android:id="@+id/edtTxt4Y"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/edtTxt3Y"
        app:layout_constraintTop_toTopOf="@+id/edtTxt4X"
