    <EditText
        android:id="@+id/edtTxt5Y"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:gravity="right"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/edtTxt5X"
        app:layout_constraintTop_toTopOf="@+id/edtTxt5X"
        android:inputType="number|numberDecimal|numberSigned"/>

    <EditText
        android:id="@+id/edtTxt6X"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/edtTxt5X"
        app:layout_constraintTop_toTopOf="@+id/edtTxt2Y"
        android:inputType="number|numberDecimal|numberSigned"/>

    <EditText
        android:id="@+id/edtTxt6Y"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/edtTxt5Y"
        app:layout_constraintTop_toTopOf="@+id/edtTxt6X"
        android:inputType="number|numberDecimal|numberSigned"/>

    <EditText
        android:id="@+id/edtTxt7X"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/edtTxt6X"
        app:layout_constraintTop_toTopOf="@+id/edtTxt3Y"
        android:inputType="number|numberDecimal|numberSigned"/>

    <EditText
        android:id="@+id/edtTxt7Y"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/edtTxt6Y"
        app:layout_constraintTop_toTopOf="@+id/edtTxt7X"
        android:inputType="number|numberDecimal|numberSigned"/>

    <EditText
        android:id="@+id/edtTxt8X"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/edtTxt7X"
        app:layout_constraintTop_toTopOf="@+id/edtTxt4Y"
        android:inputType="number|numberDecimal|numberSigned"/>

    <EditText
        android:id="@+id/edtTxt8Y"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/edtTxt7Y"
        app:layout_constraintTop_toTopOf="@+id/edtTxt8X"
        android:inputType="number|numberDecimal|numberSigned"
        />

    <TextView
        android:id="@+id/txtPos1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Pos 1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pctRaster" />

    <TextView
        android:id="@+id/txtPos2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pos 2"
        app:layout_constraintBottom_toTopOf="@+id/txtPos3"
        app:layout_constraintStart_toStartOf="@+id/txtPos1"
        app:layout_constraintTop_toBottomOf="@+id/txtPos1" />

    <TextView
        android:id="@+id/txtPos3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pos 3"
        app:layout_constraintBottom_toTopOf="@+id/txtPos4"
        app:layout_constraintStart_toStartOf="@+id/txtPos2"
        app:layout_constraintTop_toBottomOf="@+id/txtPos2" />

    <TextView
        android:id="@+id/txtPos4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pos 4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txtPos3"
        app:layout_constraintTop_toBottomOf="@+id/txtPos3" />

    <TextView
        android:id="@+id/txtPos5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Pos 5"
        app:layout_constraintBottom_toBottomOf="@+id/txtPos1"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/txtPos1" />

    <TextView
        android:id="@+id/txtPos6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pos 6"
        app:layout_constraintBottom_toTopOf="@+id/txtPos7"
        app:layout_constraintStart_toStartOf="@+id/txtPos5"
        app:layout_constraintTop_toBottomOf="@+id/txtPos5" />

    <TextView
        android:id="@+id/txtPos7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pos 7"
        app:layout_constraintBottom_toTopOf="@+id/txtPos8"
        app:layout_constraintStart_toStartOf="@+id/txtPos6"
        app:layout_constraintTop_toBottomOf="@+id/txtPos6" />

    <TextView
        android:id="@+id/txtPos8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pos 8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txtPos7"
        app:layout_constraintTop_toBottomOf="@+id/txtPos7" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_begin="196dp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edtTextDance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pctRaster" />

    <EditText
        android:id="@+id/edtTxtComment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/edtTextDance"
        app:layout_constraintStart_toStartOf="@+id/edtTextDance"
        app:layout_constraintTop_toBottomOf="@+id/edtTextDance" />


